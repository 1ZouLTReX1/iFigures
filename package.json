{
  "name": "hapi",
  "version": "0.1.0",
  "description": "HTML form activities for studying at home",
  "main": "index.js",
  "scripts": {
    "start": "npm run start-activity && npm run start-creator",
    "build": "npm run build-activity && npm run build-creator",
    "deploy": "npm run build && npm run deploy-activity && npm run deploy-creator",
    "start-activity": "cd ./activity && npm start",
    "start-creator": "cd ./creator && npm start",
    "build-activity": "cd ./activity && npm run build",
    "build-creator": "cd ./creator && npm run build",
    "deploy-activity": "copyfiles \"./activity/build/*.html\" ./deploy -u 2",
    "deploy-creator": "copyfiles \"./creator/build/**/*.*\" ./deploy -u 2",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielperr/iFigures.git"
  },
  "author": "",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/danielperr/iFigures/issues"
  },
  "homepage": "https://github.com/danielperr/iFigures#readme",
  "dependencies": {
    "hapi-activity": "file:activity",
    "hapi-creator": "file:creator"
  },
  "devDependencies": {
    "copyfiles": "^2.4.0"
  }
}
